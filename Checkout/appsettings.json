{
  "ConnectionStrings": {
    "CheckoutDB": "Server=(localdb)\\mssqllocaldb;Database=Bookstore_Checkout_DEV;Trusted_Connection=True;MultipleActiveResultSets=true;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Bookstore.Checkout": "Debug"
    },
    "File": {
      "Path": "Logs/bookstore-checkout-{Date}.log",
      "FileSizeLimitBytes": 10485760,
      "RetainedFileCountLimit": 5
    }
  },
  "AllowedHosts": "*",
  "Frontend": {
    "DevServerUrl": "http://localhost:3000",
    "TimeoutSeconds": 30
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://yourbookstore.com"
    ]
  }
}
